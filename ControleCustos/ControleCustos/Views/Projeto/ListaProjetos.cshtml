@{
    ViewBag.Title = "Controle de Custos de Projetos";
}
@using ControleCustos.Servicos
@using ControleCustos.Dominio.Enum
@using Vereyon.Web;
@{var permissaoUsuario = ServicoDeAutenticacao.UsuarioLogado.Permissao; }

<div class="jumbotron">

    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="clearfix">
                    <h1 class="panel-title projetos-title-panel">
                        Pesquisa de Projetos
                    </h1>
                    @if (permissaoUsuario == Permissao.Gerente)
                    {
                        <a class="btn btn-link projetos-link-panel"
                           href="/Projeto/Cadastro">
                            Cadastrar Novo Projeto
                        </a>
                    }
                </div>
            </div>
            <div class="panel-body">
                <form method="GET" class="form-horizontal">
                    <div class="form-group">
                        <div class="col-sm-4">
                            <div class="input-group">
                                <input class="form-control"
                                       placeholder="Filtrar por nome, cliente ou gerente"
                                       autofocus="autofocus" id="caixa-busca" /><span class="input-group-btn">
                                    <button type="submit" class="btn btn-default" id="botao-busca">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </span>

                            </div>
                        </div>
                    </div>
                </form>
                @Html.RenderFlashMessages()
                <div class="spinner">
                    <div class="rect1"></div>
                    <div class="rect2"></div>
                    <div class="rect3"></div>
                    <div class="rect4"></div>
                    <div class="rect5"></div>
                </div>
                <div id="projetos-lista" />
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/lista-projetos")
}
