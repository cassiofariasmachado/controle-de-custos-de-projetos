@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Adicionar Recursos";
}

<div class="jumbotron">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="clearfix">
                    <h1 class="panel-title projetos-title-panel">
                        Adicionar Recursos
                    </h1>
                </div>
            </div>
            <div class="panel-body">
                <form method="GET" class="form-horizontal" action="/projetos">
                    <div class="form-group">
                        <div class="col-sm-4">
                            <div class="input-group">
                                <input class="form-control"
                                       placeholder="Qual projeto você está procurando?"
                                       autofocus="autofocus" /><span class="input-group-btn">
                                    <button type="submit" class="btn btn-default">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Recusos
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a id="patrimonio">Patrimonio</a></li>
                        <li><a id="compartilhado">Compartilhados</a></li>
                        <li><a id="servico">Serviços</a></li>
                    </ul>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12" id="recurso-lista">

                    </div>
                    <div class="col-lg-12 col-md-12" id="recurso-modal">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>
        listagemRecursos.iniciar();
    </script>
}

