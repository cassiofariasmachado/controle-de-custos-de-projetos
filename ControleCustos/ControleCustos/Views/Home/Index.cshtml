@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">

    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="clearfix">
                    <h1 class="panel-title projetos-title-panel">
                        Pesquisa de Projetos
                    </h1>
                    <a class="btn btn-link projetos-link-panel"
                       href="/projetos/novo">
                        Cadastrar Novo Projeto
                    </a>
                </div>
            </div>
            <div class="panel-body">
                <form method="GET" class="form-horizontal" action="/projetos">
                    <div class="form-group">
                        <div class="col-sm-4">
                            <div class="input-group">
                                <input class="form-control"
                                       placeholder="Qual projeto você está procurando?"
                                       autofocus="autofocus" /><span class="input-group-btn">
                                    <button type="submit" class="btn btn-default">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </span>

                            </div>
                        </div>
                    </div>
                </form>

                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th class="text-left col-md-1">#</th>
                                <th class="text-left col-md-2">Nome</th>
                                <th class="col-md-1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-left">1</td>
                                <td class="text-left">Fantrolada</td>
                                <td class="text-center">
                                    <a class="btn btn-link btn-xs"
                                       href="/projetos/editar/1"
                                       title="Editar" rel="tooltip" data-placement="top">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left">2</td>
                                <td class="text-left">Unimed</td>
                                <td class="text-center">
                                    <a class="btn btn-link btn-xs"
                                       href="/projetos/editar/1"
                                       title="Editar" rel="tooltip" data-placement="top">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left">3</td>
                                <td class="text-left">Renner</td>
                                <td class="text-center">
                                    <a class="btn btn-link btn-xs"
                                       href="/projetos/editar/1"
                                       title="Editar" rel="tooltip" data-placement="top">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                </td>
                            </tr>
                        </tbody>

                    </table>

                </div>
            </div>
        </div>
    </div>

</div>
